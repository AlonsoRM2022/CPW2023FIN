@model List<ParkerWeb.Models.SalesModel.SalesDetail>
@{
    //ViewBag.Title = "Bills";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="showcase-areaTienda" id="showcase">
    <div class="overlay"></div>
    <div class="showcase-container">
        <h1 class="main-title" id="home">Casa Parker</h1>
        <p>Mis Compras</p>
    </div>
</section>

<div class="container">

    <div class="row mt-5">

        <div class="col-sm-12">

            <a href="@Url.Action("Index", "Store")" class="btn btn-outline-dark bg-gradient btn-block shadow rounded-lg" type="button">
                <i class="fas fa-undo-alt"></i> Regresar
            </a>
            <br>
            <br>

            @{
                if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <div class="row mb-3">
                            <div class="col-sm-12">
                                <div class="card">
                                    <div class="card-body bg-light">
                                        <h6>ID Transacción : @item.saleTransactionID</h6>
                                        <div class="table-responsive">
                                            <table class="table table-bordered">
                                                <thead>
                                                <th>Imagen</th>
                                                <th>Producto</th>
                                                <th>Precio Unitario</th>
                                                <th>Cantidad</th>
                                                <th>SubTotal</th>
                                                </thead>
                                                <tbody class="bg-white">
                                                    <tr>
                                                        <td>
                                                            <img class="card-img-top mb-5 mb-md-0" src="data:image/@item.objProduct.extension;base64,@item.objProduct.base64" style="width:120px;height:120px" />
                                                        </td>
                                                        <td valign="middle">
                                                            @item.objProduct.productName
                                                        </td>
                                                        <td valign="middle">
                                                            $ @item.objProduct.productPrice USD
                                                        </td>
                                                        <td valign="middle">
                                                            @item.salesDetailQuantity
                                                        </td>
                                                        <td valign="middle">
                                                            $ @item.total USD
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="row mb-3">
                        <div class="col-sm-12 text-center">
                            <h1>No se encontraron compras</h1>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
