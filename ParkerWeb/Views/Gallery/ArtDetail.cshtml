@model ParkerWeb.Models.GalleryModel.Art

@{
    ViewBag.Title = "ArtDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="showcase-areaTienda" id="showcase">
    <div class="showcase-container">
        <h1 class="main-title" id="home">Casa Parker</h1>
        <p>Detalles sobre nuestras pinturas</p>
    </div>
</section>

<section id="about">
    <section class="py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="row gx-4 gx-lg-5 align-items-center">
                <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="data:image/@Html.DisplayTextFor(p => p.extension);base64,@Html.DisplayTextFor(p => p.base64)" alt="" /></div>
                <div class="col-md-6">
                    <h1 class="display-5 fw-bolder"> @Html.DisplayTextFor(p => p.title)</h1>
                    <p class="lead">@Html.DisplayTextFor(p => p.artDescription)</p>
                    <div class="d-flex">
                        <a href="@Url.Action("Index","Gallery")" class="btn btn-dark bg-gradient w-50 text-center me-3">
                            <i class="fas fa-undo-alt"></i>  Regresar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    </section>
