            </a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="@Url.Action("Index","Home")">Inicio</a></li>
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="@Url.Action("Index","Store")">Tienda</a></li>
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="@Url.Action("Index","Restaurant")">Restaurante</a></li>
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="@Url.Action("Index","Gallery")">Galer&iacute;a</a></li>
                </ul>
                <form class="d-flex my-auto">

                    @if (Session["User"] == null)
                    {
                        <a class="btn btn-outline-dark btn-sm m-2" aria-current="page" href="@Url.Action("CheckIn", "Access")"><i class="fas fa-sign-out-alt me-1"></i>Registrarse</a>
                        <a class="btn btn-outline-dark btn-sm m-2" aria-current="page" href="@Url.Action("Index", "Access")"><i class="fas fa-sign-out-alt me-1"></i>Iniciar Sesi&oacute;n</a>
                    }
                    else
                    {
                        <a class="btn btn-outline-dark" href="@Url.Action("ShoppingCart","Store")">
                            <i class="fas fa-shopping-cart me-1"></i>
                            Cart
                            <span class="badge bg-dark text-white ms-1 rounded-pill" id="cartquantity">0</span>
                        </a>
                        <ul class="navbar-nav ms-auto me-0 me-md-3 my-2 my-md-0">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="#!"><b>@User.Identity.Name</b></a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Bills","Store")">Mis Compras</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" href="@Url.Action("SignOff","Access")">Cerrar Sesion</a></li>
                                </ul>
                            </li>
                        </ul>
                    }
                </form>
            </div>
        </div>
    </nav>
