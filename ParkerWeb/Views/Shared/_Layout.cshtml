        function ShowCartQuantity() {
            if ($("#cartquantity").length > 0) {
                jQuery.ajax({
                    url: '@Url.Action("CartQuantity", "Store") ',
                    type: "GET",
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
