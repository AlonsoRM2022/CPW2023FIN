
@{
    ViewBag.Title = "Errors";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <!--    LISTA DE NAVEGACION     -->
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Inicio</a></li>
    <li class="breadcrumb-item active">Errores</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-table me-1"></i> Lista de Errores
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">

            </div>
        </div>
        <hr /> <!--    LINEA DE DIVISION    -->
        <!--    TABLA    -->
        <table id="tableErrors" class="display cell-border" style="width: 100%">
            <thead>
                <tr>
                    <th>Error </th>
                    <th>Descripción </th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>



@section scripts{
    <!--    SCRIPTS    -->
    <script>
        /*     DECLARACION DE VARIABLES    */
        var tableData;
        var selected;

        /*      TABLA    [AJAX]   */
        tableData = $("#tableErrors").DataTable({
            responsive: true,
            ordering: true,
            "ajax": {
                url: '@Url.Action("ListErrors", "Maintainer")',
                type: "GET",
                dataType: "json"
            },
            "columns": [
                { "data": "errorID" },
                { "data": "errorDescription" }
            ],
            "language": {
                "url":"https://cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json"
            }
        });
        
       
    </script>
}
